root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# C++ files
[*.{cpp, h, c, hpp}]
indent_style = space
indent_size = 2
indent_brace_style = Allman

# Makefiles need tab indentation
[Makefile]
indent_style = space
indent_size = 2

# Python files
[*.{py}]
indent_style = space
trim_trailing_whitespace = true
indent_size = 2
end_of_line = lf

# Markdown files
[*.md]
trim_trailing_whitespace = false
